                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Fly Around SF3.4</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="{{ app.request.get('_route') == 'planemodel_index' ? 'active' }}">
                            <a href="{{ path('planemodel_index') }}">Avions</a>
                        </li>
                        <li class="{{ app.request.get('_route') == 'reservation_index' ? 'active' }}">
                            <a href="{{ path('reservation_index') }}">RÃ©servations</a>
                        </li>
                        <li class="{{ app.request.get('_route') == 'flight_index' ? 'active' }}">
                            <a href="{{ path('flight_index') }}">Vols</a>
                        </li>
                        <li class="{{ app.request.get('_route') == 'site_index' ? 'active' }}">
                            <a href="{{ path('site_index') }}">Terrains</a>
                        </li>
                        <li class="{{ app.request.get('_route') == 'review_index' ? 'active' }}">
                            <a href="{{ path('review_index') }}">Avis utilisateurs</a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        {% block body %}{% endblock %}
        <script src="{{ asset('build/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
